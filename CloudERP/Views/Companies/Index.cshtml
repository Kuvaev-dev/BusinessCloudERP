@model IEnumerable<DatabaseAccess.tblCompany>

@{
    ViewBag.Title = "List of All Comapnies";
}

<script src="~/Scripts/jquery-3.6.3.js"></script>

<div class="card">
    <div class="card-flat">
        <div class="card-header">
            @Html.ActionLink("Add Company Title", "Create", null, new { @style="float: left;", @class="btn btn-success" })
            <input class="form-control col-md-3" type="text" style="float: right;" id="searchcompany" name="searchcompany" placeholder="Search..." />
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>Company</th>
                            <th>Logo</th>
                            <th>Action's</th>
                        </tr>
                    </thead>
                    <tbody id="companylist">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <p>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </p>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Logo))
                                    {
                                        <img src="@Url.Content(item.Logo)" alt="Image" style="width: 50px; height: 50px; max-width: 100%; height: auto;" />
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("Update Profile", "Edit", new { id = item.CompanyID }, new { @class = "btn btn-pill-left btn-inverse btn-primary fa fa-edit" })
                                    @Html.ActionLink("View Profile", "Details", new { id = item.CompanyID }, new { @class = "btn btn-pill-right btn-primary fa fa-exclamation" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchcompany").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#companylist tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
