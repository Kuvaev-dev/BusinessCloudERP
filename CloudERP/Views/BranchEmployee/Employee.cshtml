@model IEnumerable<DatabaseAccess.tblEmployee>

@{
    ViewBag.Title = "Employee";
}

<script src="~/Scripts/jquery-3.6.3.js"></script>

<div class="card">
    <div class="card-flat">
        <div class="card-header">
            @Html.ActionLink("Add Employee", "EmployeeRegistration", "BranchEmployee", new { @style = "float: left;", @class = "btn btn-success" })
            <input class="form-control col-md-3" type="text" style="float: right;" id="searchemployee" name="searchemployee" placeholder="Search..." />
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.tblBranch.BranchName)
                            </th>
                            <th>Full Name</th>
                            <th>Contact №</th>
                            <th>Photo</th>
                            <th>Designation</th>
                            <th>User</th>
                            <th>Action's</th>
                        </tr>
                    </thead>
                    <tbody id="employeeslist">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Photo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Designation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserID)
                                </td>
                                <td class="btn-group">
                                    @Html.ActionLink("Update", "EmployeeUpdation", new { id = item.EmployeeID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Create User", "CreateUser", new { id = item.EmployeeID }, new { @class = "btn btn-success" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchemployee").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#employeeslist tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
