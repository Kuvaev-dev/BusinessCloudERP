@model IEnumerable<DatabaseAccess.tblCustomer>

@{
    ViewBag.Title = "Branch Customer's";
}

<script src="~/Scripts/jquery-3.6.3.js"></script>

<div class="card">
    <div class="card-flat">
        <div class="card-header">
            <input class="form-control col-md-3" type="text" style="float: right;" id="searchcustomer" name="searchcustomer" placeholder="Search..." />
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                Company
                            </th>
                            <th>
                                Branch
                            </th>
                            <th>
                                Customer
                            </th>
                            <th>
                                Contact №
                            </th>
                            <th>
                                Area
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                User
                            </th>
                        </tr>
                    </thead>
                    <tbody id="customerslist">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblCompany.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerContact)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerArea)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUser.FullName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchcustomer").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#customerslist tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
