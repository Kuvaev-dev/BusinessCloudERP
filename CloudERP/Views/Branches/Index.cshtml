@model IEnumerable<DatabaseAccess.tblBranch>

@{
    ViewBag.Title = "List of All Branches";
}

<script src="~/Scripts/jquery-3.6.3.js"></script>

<div class="card">
    <div class="card-flat">
        <div class="card-header">
            @Html.ActionLink("Add Branch", "Create", null, new { @style = "float: left;", @class = "btn btn-success" })
            <input class="form-control col-md-3" type="text" style="float: right;" id="searchbranch" name="searchbranch" placeholder="Search..." />
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>Level</th>
                            <th>Branch Title</th>
                            <th>Contact №</th>
                            <th>Branch Address</th>
                            <th>Action's</th>
                        </tr>
                    </thead>
                    <tbody id="brancheslist">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblBranchType.BranchType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchContact)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchAddress)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.BranchID }, new { @class="btn btn-primary" })
                                    @Html.ActionLink("Details", "Details", new { id = item.BranchID }, new { @class="btn btn-info" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchbranch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#brancheslist tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

