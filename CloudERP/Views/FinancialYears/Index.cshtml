@model IEnumerable<DatabaseAccess.tblFinancialYear>

@{
    ViewBag.Title = "List of All Financial Years";
}

<script src="~/Scripts/jquery-3.6.3.js"></script>

<div class="card">
    <div class="card-flat">
        <div class="card-header">
            @Html.ActionLink("Add Financial Year", "Create", null, new { @style = "float: left;", @class = "btn btn-success" })
            <input class="form-control col-md-3" type="text" style="float: right;" id="searchfinancialyear" name="searchfinancialyear" placeholder="Search..." />
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FinancialYear)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EndDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tblUser.FullName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="financialyearslist">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FinancialYear)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUser.UserName)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.FinancialYearID }, new { @class="btn btn-primary" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#searchfinancialyear").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#financialyearslist tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>